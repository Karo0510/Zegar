<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
        <ImageView fitHeight="500.0" fitWidth="800.0">
            <image>
                <Image url="@images/background.jpg" />
            </image>
        </ImageView>
        <StackPane maxHeight="-Infinity" maxWidth="-Infinity" onMouseClicked="#handleStopAlarm" onMouseMoved="#handleSetClock" prefHeight="500.0" prefWidth="800.0">
            <children>
            <ImageView fx:id="hammer" fitHeight="413.0" fitWidth="729.0" translateY="-25.0">
               <image>
                  <Image url="@images/hammer.png" />
               </image>
               <StackPane.margin>
                  <Insets bottom="25.0" />
               </StackPane.margin>
            </ImageView>
            <ImageView fitHeight="413.0" fitWidth="729.0" translateY="-40.0">
               <image>
                  <Image url="@images/AlarmClock31.png" />
               </image>
            </ImageView>
                <ImageView fitHeight="220.0" fitWidth="220.0">
                    <image>
                        <Image url="@images/Face.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="hour" fitHeight="133.0" fitWidth="200.0">
                    <image>
                        <Image url="@images/Hour.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="minute" fitHeight="220.0" fitWidth="225.0">
                    <image>
                        <Image url="@images/Minute.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="alarm" fitHeight="180.0" fitWidth="225.0">
                    <image>
                        <Image url="@images/Alarm.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="second" fitHeight="220.0" fitWidth="225.0">
                    <image>
                        <Image url="@images/Second.png" />
                    </image>
                </ImageView>
                  <Button fx:id="button" alignment="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="120.0" styleClass="oneButton" stylesheets="@Style/style.css" text="Setup mode" StackPane.alignment="TOP_RIGHT">
               <StackPane.margin>
                  <Insets right="100.0" top="300.0" />
               </StackPane.margin>
               <font>
                  <Font name="Verdana" size="12.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="120.0" styleClass="oneButton" stylesheets="@Style/style.css" text="Time" StackPane.alignment="TOP_RIGHT">
               <StackPane.margin>
                  <Insets right="100.0" top="200.0" />
               </StackPane.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="120.0" styleClass="oneButton" stylesheets="@Style/style.css" text="Alarm" StackPane.alignment="TOP_RIGHT">
               <StackPane.margin>
                  <Insets right="100.0" top="100.0" />
               </StackPane.margin>
               <font>
                  <Font name="Verdana" size="12.0" />
               </font>
            </Button>
            </children>
        </StackPane>
    </children>
</StackPane>
